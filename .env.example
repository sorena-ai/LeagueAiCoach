# Application Configuration
ENVIRONMENT=development
LOG_LEVEL=DEBUG

# Domain Configuration
# Development: development.api.sensii.gg, development.sensii.gg
# Production: api.sensii.gg, sensii.gg
API_DOMAIN=development.api.sensii.gg
LANDING_PAGE_DOMAIN=development.sensii.gg

# Coach LLM Configuration (change these to switch providers)
COACH_PROVIDER=gemini  # Options: "gemini" or "grok"
COACH_MODEL=gemini-flash-lite-latest  # Model name for the selected provider

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_TTS_MODEL=gpt-4o-mini-tts
OPENAI_TTS_VOICE=onyx
OPENAI_TTS_SPEED=1.1

# Grok API Configuration
GROK_API_KEY=your_grok_api_key_here
GROK_MODEL=grok-4-1-fast-reasoning

# Google Gemini API Configuration
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_MODEL=gemini-flash-lite-latest

# LangSmith Configuration
LANGSMITH_TRACING=true
LANGSMITH_ENDPOINT=https://api.smith.langchain.com
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGSMITH_PROJECT=sensii

# Datadog Configuration
DD_API_KEY=your_datadog_api_key_here
DD_APP_KEY=your_datadog_app_key_here
DD_SERVICE=sensei-lol-coach
DD_ENV=development
DD_VERSION=1.0.0
DD_SITE=datadoghq.eu
DD_LOGS_ENABLED=true
DD_TRACE_ENABLED=true
DD_LOG_LEVEL=INFO

# API Configuration
MAX_FILE_SIZE_MB=10
REQUEST_TIMEOUT_SECONDS=30

# Authentication / Session Configuration
AUTH0_DOMAIN=dev-your-tenant.us.auth0.com
AUTH0_CLIENT_ID=your_auth0_client_id
AUTH0_CLIENT_SECRET=your_auth0_client_secret
AUTH0_AUDIENCE=your_api_audience
# Development: https://development.api.sensii.gg/api/v1/auth/callback
# Production: https://api.sensii.gg/api/v1/auth/callback
AUTH0_CALLBACK_URL=https://development.api.sensii.gg/api/v1/auth/callback
# Development: https://development.api.sensii.gg
# Production: https://api.sensii.gg
LOGIN_BASE_URL=https://development.api.sensii.gg
# Development: https://development.sensii.gg/login-success
# Production: https://sensii.gg/login-success
LOGIN_SUCCESS_URL=https://development.api.sensii.gg/login-success
SESSION_TOKEN_SECRET=super_secret_session_key
SESSION_TOKEN_ISSUER=sensii-api
SESSION_TOKEN_AUDIENCE=sensii-client
SESSION_TOKEN_EXPIRES_MINUTES=60
AUTH_SESSION_TTL_SECONDS=600

# MongoDB Configuration
MONGODB_URI=mongodb://mongodb:27017/sensii
MONGODB_DB_NAME=sensii
MONGO_ROOT_USERNAME=sensii
MONGO_ROOT_PASSWORD=sensii

# Traefik Configuration
# Email for Let's Encrypt SSL certificates
LETSENCRYPT_EMAIL=your-email@example.com
# Traefik dashboard port (optional, default: 8080)
TRAEFIK_DASHBOARD_PORT=8080
# Set to false in production to secure the dashboard
TRAEFIK_DASHBOARD_INSECURE=true

# Frontend Environment Variables (baked into Next.js build)
# Development: https://development.api.sensii.gg/api/v1
# Production: https://api.sensii.gg/api/v1
NEXT_PUBLIC_API_BASE=https://development.api.sensii.gg/api/v1
# Development: https://development.api.sensii.gg/api/v1/downloads/sensii.exe
# Production: https://api.sensii.gg/api/v1/downloads/sensii.exe
NEXT_PUBLIC_DOWNLOAD_URL=https://api.sensii.gg/api/v1/downloads/sensii.exe
NEXT_PUBLIC_DISCORD_INVITE=https://discord.gg/M6b3q4sd

# PostHog
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_project_key_here
NEXT_PUBLIC_POSTHOG_HOST=https://eu.i.posthog.com
